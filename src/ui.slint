import { LineEdit, Button, ComboBox, GridBox , CheckBox, TextEdit} from "std-widgets.slint";

export component AnyServeUI inherits Window {
    callback start_ftp_server();
    callback stop_ftp_server();

    in-out property <string> le_path <=> lePath.text;
    in-out property <string> te_logs <=> teLogs.text;

    private property <bool> any-checked;

    title: "Anyserve";
    height: 500px;
    GridBox {
        GridBox {
            row: 0;
            lePath := LineEdit {
                col: 0;
                text: "~/Public/";
            }
            btPath := Button {
                col: 1;
                text: "Select";
            }
        }
        // TODO: Bind address config here?
        gb1 := GridBox {
            row: 1;
            cbFTP := CheckBox {
                col: 0;
                text: "FTP";
            }
            cbTFTP := CheckBox {
                col: 1;
                text: "TFTP";
                enabled: false;
            }
            cbHTTP := CheckBox {
                col: 2;
                text: "HTTP";
                enabled: false;
            }
            cbDHCP := CheckBox {
                col: 3;
                text: "DHCP";
                enabled: false;
            }
        }
        btStart := Button {
            row: 2;
            text: "Start";
            checkable: true;

            clicked => {
                if (btStart.checked) {
                    any-checked = false;

                    if (cbFTP.checked){
                        teLogs.text += "Startin FTP server\n";
                        any-checked = true;
                        root.start_ftp_server()
                    }

                    if (cbHTTP.checked){
                        teLogs.text += "Startin HTTP server\n";
                        any-checked = true;
                    }

                    if (cbTFTP.checked){
                        teLogs.text += "Startin TFTP server\n";
                        any-checked = true;
                    }

                    if (cbDHCP.checked){
                        teLogs.text += "Startin DHCP server\n";
                        any-checked = true;
                    }

                    if (any-checked) {
                        btStart.text = "Stop";
                    }
                    else {
                        teLogs.text += "Nothing to start...\n";
                        btStart.checked = false;
                    }
                }
                else {
                    btStart.text = "Start";
                    teLogs.text += "Stopped\n";
                    root.stop_ftp_server();
                }
                cbFTP.enabled = !btStart.checked;
                lePath.enabled = !btStart.checked;
            }
        }
        teLogs := TextEdit {
            row: 3;
            read-only: true;
         }
    }
}
